<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">


<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
    version="2.4">


  <display-name>Ichneutae</display-name>

  <!-- The Welcome File List -->
  <welcome-file-list>
     <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- search servlet -->
  <servlet>
    <servlet-name>search</servlet-name>
    <servlet-class>uk.co.nickthecoder.ichneutae.servlet.Search</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

  <!-- spider servlet -->
  <servlet>
    <servlet-name>spider</servlet-name>
    <servlet-class>uk.co.nickthecoder.ichneutae.servlet.Spider</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>spider</servlet-name>
    <url-pattern>/spider</url-pattern>
  </servlet-mapping>
  

  <!-- update servlet -->
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>uk.co.nickthecoder.ichneutae.servlet.Update</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  
</web-app>
