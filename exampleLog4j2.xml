<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="uk.co.nickthecoder.ichneutae.Configuration" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.ichneutae.StorageWriter" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.ichneutae.servlet.Update" level="TRACE"/>
    <Logger name="uk.co.nickthecoder.ichneutae.servlet.Spider" level="TRACE"/>
  </Loggers>
</Configuration>
